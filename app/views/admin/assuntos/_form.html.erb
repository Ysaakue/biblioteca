<div class="row">
  <div class="col-sm-8">
    <%= simple_form_for([:admin, @assunto], wrapper: :vertical_form, html: { class: "form-vertical", role: "form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :descricao %>
      </div>

      <div class="form-actions">
        <%= f.submit "Salvar", :class => 'btn btn-primary' %>
        <%= link_to "Cancelar", admin_assuntos_path, :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
