<div class="page-header">
  <h1>Assuntos</h1>
</div>

<%= render partial: "search_form" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Descrição</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @assuntos.each do |assunto| %>
                <tr>
                  <td><%= assunto.descricao %></td>
                  <td>
                    <%= link_to 'Exibir', admin_assunto_path(assunto), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Editar', edit_admin_assunto_path(assunto), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Deletar', admin_assunto_path(assunto), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @assuntos %>
        </div>
      </div>
    </div>
  </div>
</div>