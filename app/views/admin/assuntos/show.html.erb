<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h2>Exibir Assunto</h2>
      </div>
      <div class="ibox-content">
        <div class="row">
          <dl class="dl-horizontal">
            <dt><strong>Descrição:</strong></dt>
            <dd><%= @assunto.descricao %></dd>
          </dl>
        </div>

        <div class="form-actions">
          <%= link_to "Voltar", admin_assuntos_path, :class => 'btn btn-default'  %>
          <%= link_to "Editar",
                      edit_admin_assunto_path(@assunto), :class => 'btn btn-default' %>
          <%= link_to "Deletar",
                      admin_assunto_path(@assunto),
                      :method => 'delete',
                      :data => { :confirm => 'Tem certeza?' },
                      :class => 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
