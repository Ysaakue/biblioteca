<div class="row">
  <div class="col-sm-8">
    <%= simple_form_for([:admin, @devolucao], wrapper: :vertical_form, html: { class: "form-vertical", role: "form" }) do |f| %>

      <div class="form-inputs">
        <%= f.input :multa %>
      </div>

      <div class="form-actions">
        <%= f.submit "Salvar", :class => 'btn btn-primary' %>
        <%= link_to "Cancelar", admin_devolucoes_path, :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
