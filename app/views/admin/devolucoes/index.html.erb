<div class="page-header">
  <h1>Devolucoes</h1>
</div>

<%= render partial: "search_form" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Aluno</th>
                <th>Bibliotecario</th>
                <th>Multa</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @devolucoes.each do |uo| %>
                <tr>
                  <td><%= devolucao.aluno %></td>
                  <td><%= devolucao.bibliotecario %></td>
                  <td><%= devolucao.multa %></td>
                  <td>
                    <%= link_to 'Exibir', admin_devolucao_path(devolucao), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Editar', edit_admin_devolucao_path(devolucao), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Deletar', admin_devolucao_path(devolucao), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @devolucoes %>
        </div>
      </div>
    </div>
  </div>
</div>