<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h2>Exibir Devolucao</h2>
      </div>
      <div class="ibox-content">
        <div class="row">
          <dl class="dl-horizontal">
            <dt><strong>Aluno:</strong></dt>
            <dd><%= User.find(@devolucao.emprestimo.aluno_id).nome %></dd>
            <dt><strong>Biblioitecario:</strong></dt>
            <dd><%= User.find(@devolucao.emprestimo.bibliotecario_id).nome %></dd>
            <dt><strong>Data devolucao:</strong></dt>
            <dd><%= ldate @devolucao.created_at, :long %></dd>
            <dt><strong>Multa:</strong></dt>
            <dd>R$ <%= @devolucao.multa %></dd>
        </div>
        <dt>Exemplares:</dt>
          <dd>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>id</th>
                  <th>livro</th>
                </tr>
              </thead>
              <tbody>
                <% @devolucao.emprestimo.exemplares.each do |exemplar| %>
                  <tr>
                    <td><%= exemplar.id %></td>
                    <td><%= exemplar.livro.titulo %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </dd>
        <div class="form-actions">
          <%= link_to "Voltar", admin_devolucoes_path, :class => 'btn btn-default'  %>
          <%= link_to "Editar",
                      edit_admin_devolucao_path(@devolucao), :class => 'btn btn-default' %>
          <%= link_to "Deletar",
                      admin_devolucao_path(@devolucao),
                      :method => 'delete',
                      :data => { :confirm => 'Tem certeza?' },
                      :class => 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
