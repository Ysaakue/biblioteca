<div class="row">
    <div class="col-sm-8">
      <%= simple_form_for([:admin, @editora], wrapper: :vertical_form, html: { class: "form-vertical", role: "form" }) do |f| %>

      <div class="form-inputs">
        <%= f.input :nome %>
        <%= f.association :estado %>
        <%= f.association :cidade %>
      </div>

      <div class="form-actions">
        <%= f.submit "Salvar", :class => 'btn btn-primary' %>
        <%= link_to "Cancelar", admin_editoras_path, :class => 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>

