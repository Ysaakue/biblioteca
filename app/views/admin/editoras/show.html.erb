<div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h2>Exibir Editora</h2>
        </div>
        <div class="ibox-content">
          <div class="row">
            <dl class="dl-horizontal">
              <dt><strong>Nome:</strong></dt>
              <dd><%= @editora.nome %></dd>
              <dt><strong>Estado:</strong></dt>
              <dd><%= @editora.estado %></dd>
              <dt><strong>Cidade:</strong></dt>
              <dd><%= @editora.cidade %></dd>
            </dl>
          </div>
  
          <div class="form-actions">
            <%= link_to "Voltar", admin_editoras_path, :class => 'btn btn-default'  %>
            <%= link_to "Editar",
                        edit_admin_editora_path(@editora), :class => 'btn btn-default' %>
            <%= link_to "Deletar",
                        admin_editora_path(@editora),
                        :method => 'delete',
                        :data => { :confirm => 'Tem certeza?' },
                        :class => 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
