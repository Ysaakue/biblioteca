<% content_for :action_buttons do %>
  <% if can?(:create, "Exemplar".constantize) %>
    <%= link_to new_admin_exemplar_path, class: 'btn btn-xs btn-primary right' do %>
      <i class="fa fa-plus"></i>
      Novo Exemplar
    <% end %>
  <% end %>
<% end %>

<% content_for :search_form do %>
  <%= search_form_for [:admin, @q], html: {class: "navbar-form navbar-left", id: "filter-form", role: "search" } do |s| %>
    <div class="form-group margin-right-5">
      <%= s.label :created_at_gteq, "Data de devolução a partir de" %>
    </div>
    <div class="form-group">
      <div class="input-group datetime">
        <%= s.text_field :created_at_gteq, "data-provide" => 'datepicker', :value => @q.created_at_gteq.blank? ? nil : l(@q.created_at_gteq, :format => :long), :id => "acao_created_at", class: "form-control date-picker" %>
        <span class="input-group-addon"><%= glyph(:calendar) %></span>
      </div>
    </div>
    <div class="form-group margin-right-5">
      &nbsp;
      <%= s.label :created_at_lteq, "a" %>
    </div>
    <div class="form-group">
      <div class="input-group datetime">
        <%= s.text_field :created_at_lteq, "data-provide" => 'datepicker', :value => @q.created_at_lteq.blank? ? nil : l(@q.created_at_lteq, :format => :long), :id => "acao_created_at", class: "form-control date-picker" %>
        <span class="input-group-addon"><%= glyph(:calendar) %></span>
      </div>
    </div>
    <%= link_to "", class: "btn btn-sm btn-success btn-filter-search" do %>
      <i class="fa fa-search"></i>
      Buscar
    <% end %>
    <%= link_to admin_exemplares_path, class: "btn btn-sm btn-default btn-filter-clear" do %>
      <i class="fa fa-remove"></i>
      Limpar
    <% end %>
  <% end %>
<% end %>

<%= render :template => 'layouts/search_form_template' %>