<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h2>Exibir Uo</h2>
      </div>
      <div class="ibox-content">
        <div class="row">
          <dl class="dl-horizontal">
            <dt><strong>Publicacao:</strong></dt>
            <dd><%= @livro.publicacao %></dd>
            <dt><strong>Publicacao:</strong></dt>
            <dd><%= ldate @livro.publicacao, :long %></dd>
            <dt>Editora</dt>
            <dd><%= @livro.editora.nome %></dd>
          </dl>
        </div>

        <div class="form-actions">
          <%= link_to "Voltar", admin_livros_path, :class => 'btn btn-default'  %>
          <%= link_to "Editar",
                      edit_admin_livro_path(@livro), :class => 'btn btn-default' %>
          <%= link_to "Deletar",
                      admin_livro_path(@livro),
                      :method => 'delete',
                      :data => { :confirm => 'Tem certeza?' },
                      :class => 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
