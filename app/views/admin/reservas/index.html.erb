<div class="page-header">
  <h1>Reservas</h1>
</div>

<%= render partial: "search_form" %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Aluno</th>
                <th>Livro</th>
                <th>Retirado</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @reservas.each do |reserva| %>
                <tr>
                  <td><%= reserva.aluno.nome %></td>
                  <td><%= reserva.livro.titulo %></td>
                  <% if reserva.retirado %>
                    <td>Retirado</td>
                  <% else %>
                    <td>Aguardando</td>
                  <% end %>
                  <td>
                    <%= link_to 'Exibir', admin_reserva_path(reserva), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Editar', edit_admin_reserva_path(reserva), class: 'btn btn-xs btn-default' %>
                    <%= link_to 'Deletar', admin_reserva_path(reserva), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-xs btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @reservas %>
        </div>
      </div>
    </div>
  </div>
</div>
