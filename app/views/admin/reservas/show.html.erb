<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h2>Exibir Reserva</h2>
      </div>
      <div class="ibox-content">
        <div class="row">
          <dl class="dl-horizontal">
            <dt><strong>Aluno:</strong></dt>
            <dd><%= @reserva.aluno.nome %></dd>
            <dt><strong>Livro:</strong></dt>
            <dd><%= @reserva.livro.titulo %></dd>
            <dt><strong>Status:</strong></dt>
            <% if @reserva.retirado %>
              <dd>Retirado</dd>
            <% else %>
              <dd>Aguardanto</dd>
            <%end%>
          </dl>
        </div>

        <div class="form-actions">
          <%= link_to "Voltar", admin_reservas_path, :class => 'btn btn-default'  %>
          <%= link_to "Editar",
                      edit_admin_reserva_path(@reserva), :class => 'btn btn-default' %>
          <%= link_to "Deletar",
                      admin_reserva_path(@reserva),
                      :method => 'delete',
                      :data => { :confirm => 'Tem certeza?' },
                      :class => 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
