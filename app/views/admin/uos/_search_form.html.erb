<% content_for :action_buttons do %>
  <% if can?(:create, "Uo".constantize) %>
    <%= link_to new_admin_uo_path, class: 'btn btn-xs btn-primary right' do %>
      <i class="fa fa-plus"></i>
      Nova Uo
    <% end %>
  <% end %>
<% end %>

<% content_for :search_form do %>
  <%= search_form_for [:admin, @q], html: {class: "navbar-form navbar-left", id: "filter-form", role: "search" } do |s| %>
    <div class="form-group margin-right-5">
      <%= s.label :nome_cont, "Nome" %>
      <%= s.search_field :nome_cont, :class => "form-control" %>
    </div>
    <div class="form-group margin-right-5">
      <%= s.label :sigla_cont, "Sigla" %>
      <%= s.search_field :sigla_cont, :class => "form-control" %>
    </div>
    <div class="form-group margin-right-5">
      <%= s.label :cnpj_cont, "Cnpj" %>
      <%= s.search_field :cnpj_cont, :class => "form-control" %>
    </div>
    <div class="form-group margin-right-5">
      <%= s.label :cidade_nome_cont, "Cidade" %>
      <%= s.search_field :cidade_nome_cont, :class => "form-control" %>
    </div>
    <%= link_to "", class: "btn btn-sm btn-success btn-filter-search" do %>
      <i class="fa fa-search"></i>
      Buscar
    <% end %>
    <%= link_to admin_uos_path, class: "btn btn-sm btn-default btn-filter-clear" do %>
      <i class="fa fa-remove"></i>
      Limpar
    <% end %>
  <% end %>
<% end %>

<%= render :template => 'layouts/search_form_template' %>