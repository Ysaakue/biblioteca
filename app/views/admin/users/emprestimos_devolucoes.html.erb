<div class="row">
	<div class="col-lg-12">
		<div class="ibox float-e-margins">
			<div class="ibox-title">
				<h2>Estatísticas Editora</h2>
			</div>
			<div class="ibox-content">
				<div class="row">
					<dl class="dl-horizontal">
						<dt>Quantidade por Estado:</dt>
						<dd>
							<table class="table table-striped">
								<thead>
									<tr>
										<th>Nome</th>
										<th>Quant. Emprestimos</th>
										<th>Multa Máxima</th>
										<th>Multa Média</th>
										<th>Multa Total</th>
									</tr>
								</thead>
								<tbody>
									<% @users.each do |row| %>
										<tr>
											<td><%= row['nome'] %></td>
											<td><%= row['emprestimo'] %></td>
											<td><%= row['multa_max'] %></td>
											<td><%= row['multa_media'] %></td>
											<td><%= row['multa_total'] %></td>
										</tr>
									<% end %>
								</tbody>
							</table>
						</dd>
					</dl>
				</div>
				<div class="form-actions">
					<%= link_to "Voltar", admin_users_path, :class => 'btn btn-default'  %>
				</div>
			</div>
		</div>
	</div>
</div>
