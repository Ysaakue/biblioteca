<div class="page-header">
  <h1>Exibir Usu√°rio</h1>
</div>

<div class="row">
  <dl class="dl-horizontal">
    <dt><strong>Nome:</strong></dt>
    <dd><%= @user.nome %></dd>
    <dt><strong>Email:</strong></dt>
    <dd><%= @user.email %></dd>
    <dt><strong>Telefone:</strong></dt>
    <dd><%= @user.telefone %></dd>
    <dt><strong>Role:</strong></dt>
    <dd><%= @user.role.nome %></dd>
    <dt><strong>Uo:</strong></dt>
    <dd><%= @user.uo.blank? ? "-" : @user.uo.nome %></dd>
  </dl>
</div>

<div class="form-actions">
  <%= link_to "Voltar", admin_users_path, :class => 'btn btn-default'  %>
  <% if @user.can_edit?(current_user) %>
    <%= link_to "Editar",
              edit_admin_user_path(@user), :class => 'btn btn-default' %>
  <% end %>
  <% if @user.can_delete?(current_user) %>
    <%= link_to "Deletar",
              admin_user_path(@user),
              :method => 'delete',
              :data => { :confirm => 'Tem certeza?' },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
