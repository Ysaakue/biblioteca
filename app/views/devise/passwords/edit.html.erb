<div class="border-form-div">
  <h4 class="text-center">Alterar sua senha</h4>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "m-t", role: "form" }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.password_field :password, placeholder: "Nova Senha", required: true, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: "Confirme sua Nova Senha", required: true, class: "form-control" %>
    </div>

    <%= f.submit "Alterar senha", class: "btn btn-primary full-width" %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>
