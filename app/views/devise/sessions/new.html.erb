<%= error_message resource %>

<div class="border-form-div">
  <h2>Login</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { role: "form" }) do |f| %>
    <div class="form-group">
      <%= f.text_field :email, :autofocus => true, :placeholder => "Login", :title => tooltip_error_title(resource, :email), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, :placeholder => "Senha", :title => tooltip_error_title(resource, :password), class: "form-control" %>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label for="remember_me_chk">
          <%= f.check_box :remember_me, :id => 'remember_me_chk' %> Manter conectado
        </label>
      </div>
    <% end -%>

    <%= f.submit "Login", :class=> 'btn btn-primary' %>
  <% end %>

<%= render "devise/shared/links" %>
</div>
