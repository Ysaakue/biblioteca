<%= simple_form_for(@livro) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titulo %>
    <%= f.input :publicacao %>
    <%= f.association :editora %>
    <%= f.input :exemplar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
